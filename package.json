{
  "name": "react-useclient",
  "version": "1.0.0",
  "description": "This is a utility library for React that allows you to add the 'use client'; at the top of client component files.",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "src/types.ts",
  "bin": {
    "useclient": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "doc": "typedoc --out docs src/index.ts",
    "doc:markdown": "typedoc --plugin typedoc-plugin-markdown --out doc src/index.ts",
    "format": "prettier . --write",
    "prepack": "npm run build && npm run doc && npm run format",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "start": "ts-node src/index.tsx",
    "cli": "ts-node src/cli.ts",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Bradley Dirheimer",
  "license": "MTI",
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/yargs": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.2",
    "typedoc-plugin-markdown": "^3.16.0",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "files": [
    "./src/index.ts",
    "./src/cli.ts",
    "./src/config/addclient.json",
    "./src/config/index.ts",
    "./src/types.ts",
    "./dist"
  ]
}
